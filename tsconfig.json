{
  "compilerOptions": {
    "target": "es5",          
    "module": "es2015",     
    "lib": [
      "es2015",
      "dom",
    ],
    "declaration": true,   
    "declarationMap": true,
    "sourceMap": true,    
    "outDir": "dist",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "files": [
    "src/index.ts"
  ]
}